{
  "compilerOptions": {
    "baseUrl":          ".",
    "lib":              [ "es6", "dom" ],
    "module":           "es2015",
    "moduleResolution": "node",
    "noImplicitAny":    false,
    "paths": {
      "@components/*": ["./Client/app/components/*"],
      "@core/*":       ["./Client/app/_core/*"],
      "@pages/*":      ["./Client/app/pages/*"]
    },
    "target":              "es5",
    "jsx":                 "react",
    "sourceMap":           true,
    "skipDefaultLibCheck": true,
    "skipLibCheck":        true,
    "strict":              true,
    "types":               ["webpack-env"],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
